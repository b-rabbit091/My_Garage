<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mygarage">

    <!-- Optional permissions if you later add notifications or local storage -->
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Garage"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGarage">

        <!-- Login Activity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Signup Activity -->
        <activity android:name=".SignupActivity" />

        <!-- Dashboard Activity -->
        <activity android:name=".DashboardActivity" />

        <!-- Add Vehicle -->
        <activity android:name=".AddVehicleActivity" />

        <!-- Add Expense -->
        <activity android:name=".AddExpenseActivity" />

        <!-- Reminders -->
        <activity android:name=".RemindersActivity" />

        <!-- Vehicle Details -->
        <activity android:name=".VehicleDetailsActivity" />

    </application>

</manifest>
