<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    android:orientation="vertical"
    android:padding="24dp">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/outline_button_small"
        android:text="Back"
        android:textColor="#111827" />

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/headerIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_list_pic"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Reminder List"
            android:textColor="#111827"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleReminderList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="View and manage all upcoming reminders for this vehicle."
            android:textColor="#6B7280"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/labelVehicleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vehicle"
        android:textColor="#111827"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerVehicleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reminderRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1" />

</LinearLayout>
