<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backBtn"
            android:text="Back"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/outline_button_small"
            android:textColor="#111827" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/headerIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_expense_pic"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/titleExpenses"
                android:text="Add Expenses"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtitleExpenses"
                android:text="Record fuel, washing, servicing and other expenses for accurate tracking."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelVehicle"
                android:text="Vehicle"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/labelFuel"
                android:text="Fuel Expense"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/fuelAmount"
                android:hint="Amount ($)"
                android:inputType="numberDecimal"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/fuelDate"
                android:hint="Date (MM-DD-YYYY)"
                android:inputType="date"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnFuelSave"
                    android:text="Save"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/primary_button"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnFuelCancel"
                    android:text="Cancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/outline_button_small"
                    android:textColor="#6B7280" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelWash"
                android:text="Washing Expense"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/washAmount"
                android:hint="Amount ($)"
                android:inputType="numberDecimal"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/washDate"
                android:hint="Date (MM-DD-YYYY)"
                android:inputType="date"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnWashSave"
                    android:text="Save"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/primary_button"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnWashCancel"
                    android:text="Cancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/outline_button_small"
                    android:textColor="#6B7280" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelService"
                android:text="Servicing Expense"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/serviceAmount"
                android:hint="Amount ($)"
                android:inputType="numberDecimal"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/serviceDate"
                android:hint="Date (MM-DD-YYYY)"
                android:inputType="date"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnServiceSave"
                    android:text="Save"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/primary_button"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnServiceCancel"
                    android:text="Cancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/outline_button_small"
                    android:textColor="#6B7280" />
            </LinearLayout>

            <TextView
                android:id="@+id/labelOther"
                android:text="Other Expense"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/otherAmount"
                android:hint="Amount ($)"
                android:inputType="numberDecimal"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/otherDate"
                android:hint="Date (MM-DD-YYYY)"
                android:inputType="date"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/otherNote"
                android:hint="Optional note about the expense"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnOtherSave"
                    android:text="Save"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/primary_button"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnOtherCancel"
                    android:text="Cancel"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/outline_button_small"
                    android:textColor="#6B7280" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
