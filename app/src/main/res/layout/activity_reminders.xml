<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backBtn"
            android:text="Back"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/outline_button_small"
            android:textColor="#111827" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <ImageView
                android:id="@+id/headerIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_reminder_pic"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/titleReminders"
                android:text="Reminders"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtitleReminders"
                android:text="Set fuel, washing and service reminders so you never miss an important date."
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelVehicle"
            android:text="Vehicle"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <!-- Fuel Reminder card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:text="Fuel Reminder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Fuel date"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <DatePicker
                android:id="@+id/fuelDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="true"
                android:theme="@style/MyDatePickerTheme" />

            <TextView
                android:text="Fuel time"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/fuelTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <TextView
                android:text="Note"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/fuelNote"
                android:hint="Write fuel note"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveFuelReminder"
                android:text="Save Fuel Reminder"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/primary_button"
                android:textColor="#FFFFFF"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Washing Reminder card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Washing Reminder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Washing date"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <DatePicker
                android:id="@+id/washingDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="true"
                android:theme="@style/MyDatePickerTheme" />

            <TextView
                android:text="Washing time"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/washingTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <TextView
                android:text="Note"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/washingNote"
                android:hint="Write washing note"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveWashingReminder"
                android:text="Save Washing Reminder"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/primary_button"
                android:textColor="#FFFFFF"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Service Reminder card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="Service Reminder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Service date"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <DatePicker
                android:id="@+id/serviceDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="true"
                android:theme="@style/MyDatePickerTheme" />

            <TextView
                android:text="Service time"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TimePicker
                android:id="@+id/serviceTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <TextView
                android:text="Note"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/serviceNote"
                android:hint="Write service note"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveServiceReminder"
                android:text="Save Service Reminder"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/primary_button"
                android:textColor="#FFFFFF"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
